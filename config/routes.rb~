ActionController::Routing::Routes.draw do |map|
  map.root :controller => "sessions", :action => "new"

  map.resources :sessions
  map.resources :main
  map.resources :profiles
  map.resources :users, :active_scaffold => true
  map.resources :brands
  map.resources :cars
  map.resources :colors
  map.resources :fuels
  map.resources :gears
  map.resources :type_vehicles
  map.resources :options
  map.resources :vehicles

# Acertos para os routes do Active Scaffold (nem sei se Ã© gambias, mas funciono =] )
 # map.connect ':controller/row/index'
 # map.connect ':controller/list/index'

  map.connect ':controller/:action/:id'
  map.connect ':controller/:action/:id.:format'
end
